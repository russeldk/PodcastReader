@model IEnumerable<PodcastReader.Models.Podcasts.Podcast> 
@{
    ViewBag.Title = "Podcast Reader";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@item.Url">@item.Title</a>
            </td>
        </tr>
    }

</table>   